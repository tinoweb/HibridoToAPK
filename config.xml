<?xml version='1.0' encoding='utf-8'?>
<widget android-versionCode="39" id="com.controlcondo.phonega" version="1.2.5" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>ControlCondoMobile</name>
    <description>
        Aplicativo ControlCondoMobile.
    </description>
    <author email="rbelli@firstcontrol.com.br" href="https://www.controlcondo.com.br">
       First Control Sistemas Inteligentes Ltda. Epp
    </author>
    <content src="index.html" />
	
    <preference name="phonegap-version" value="cli-9.0.0" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="show-splash-screen-spinner" value="true" />
    <preference name="auto-hide-splash-screen" value="true" />
    <preference name="orientation" value="portrait" />
    <preference name="fullscreen" value="false" />
    <preference name="target-device" value="handset" />
    <preference name="AndroidPersistentFileLocation" value="Compatibility" />
    <preference name="KeyboardResize" value="true" />
    <preference name="KeyboardResizeMode" value="native" />
	<preference name="UIWebViewBounce" value="false" />
	<preference name="BackupWebStorage" value="local" />
	<preference name="AutoHideSplashScreen" value="false" />
	<preference name="ShowSplashScreenSpinner" value="false" />
	<preference name="SplashScreenDelay" value="0" />
	<preference name="Suppresses3DTouchGesture" value="true" />
    <preference name="Allow3DTouchLinkPreview" value="false" />
    <preference name="CordovaWebViewEngine" value="CDVWKWebViewEngine" />
    <preference name="AllowInlineMediaPlayback" value="true" />
	
    <platform name="android">
		<preference name="StatusBarOverlaysWebView" value="false" />
		<preference name="android-minSdkVersion" value="19" />
		<preference name="android-targetSdkVersion" value="28" />
		<preference name="SplashMaintainAspectRatio" value="true" />
		<icon density="ldpi" src="www/res/icon/android/drawable-ldpi-icon.png" />
        <icon density="mdpi" src="www/res/icon/android/drawable-mdpi-icon.png" />
        <icon density="hdpi" src="www/res/icon/android/drawable-hdpi-icon.png" />
        <icon density="xhdpi" src="www/res/icon/android/drawable-xhdpi-icon.png" />
        <icon density="xxhdpi" src="www/res/icon/android/drawable-xxhdpi-icon.png" />
        <icon density="xxxhdpi" src="www/res/icon/android/drawable-xxxhdpi-icon.png" />
        <splash density="land-ldpi" src="www/img/screen.png" />
        <splash density="land-mdpi" src="www/img/screen.png" />
        <splash density="land-hdpi" src="www/img/screen.png" />
        <splash density="land-xhdpi" src="www/img/screen.png" />
        <splash density="land-xxhdpi" src="www/img/screen.png" />
        <splash density="land-xxxhdpi" src="www/img/screen.png" />
        <splash density="port-ldpi" src="www/img/screen.png" />
        <splash density="port-mdpi" src="www/img/screen.png" />
        <splash density="port-hdpi" src="www/img/screen.png" />
        <splash density="port-xhdpi" src="www/img/screen.png" />
        <splash density="port-xxhdpi" src="www/img/screen.png" />
        <splash density="port-xxxhdpi" src="www/img/screen.png" />
        <allow-intent href="market:*" />
        <resource-file src="google-services.json" target="app/google-services.json" />
        <framework src="com.google.android.gms:play-services-location:11.8.0" />
    </platform>
    <platform name="ios">
      	<config-file parent="CFBundleAllowMixedLocalizations" platform="ios" target="*-Info.plist">
        	<true />
      	</config-file>
      	<preference name="StatusBarOverlaysWebView" value="true" />
        <icon height="57" platform="ios" src="www/res/icons/ios/icon.png" width="57" />
        <icon height="40" platform="ios" src="www/res/icons/ios/icon-40.png" width="40" />
        <icon height="80" platform="ios" src="www/res/icons/ios/icon-40@2x.png" width="80" />
        <icon height="50" platform="ios" src="www/res/icons/ios/icon-50.png" width="50" />
        <icon height="100" platform="ios" src="www/res/icons/ios/icon-50@2x.png" width="100" />
        <icon height="60" platform="ios" src="www/res/icons/ios/icon-60.png" width="60" />
        <icon height="120" platform="ios" src="www/res/icons/ios/icon-60@2x.png" width="120" />
        <icon height="180" platform="ios" src="www/res/icons/ios/icon-60@3x.png" width="180" />
        <icon height="144" platform="ios" src="www/res/icons/ios/icon-72@2x.png" width="144" />
        <icon height="29" platform="ios" src="www/res/icons/ios/icon-small.png" width="29" />
        <icon height="58" platform="ios" src="www/res/icons/ios/icon-small@2x.png" width="58" />
        <icon height="87" platform="ios" src="www/res/icons/ios/icon-small@3x.png" width="87" />
		<icon height="1024" platform="ios" src="www/res/icon/ios/icon1024.png" width="1024" />
        <splash height="1136" platform="ios" src="www/res/screens/ios/Default-568h@2x~iphone.png" width="640" />
        <splash height="1334" platform="ios" src="www/res/screens/ios/Default-667h.png" width="750" />
        <splash height="2208" platform="ios" src="www/res/screens/ios/Default-736h.png" width="1242" />
        <splash height="1024" platform="ios" src="www/res/screens/ios/Default-Portrait~ipad.png" width="768" />
        <splash height="960" platform="ios" src="www/res/screens/ios/Default@2x~iphone.png" width="640" />
        <splash height="480" platform="ios" src="www/res/screens/ios/Default~iphone.png" width="320" />
		
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <resource-file src="GoogleService-Info.plist" />
    </platform>
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />

    
	<platform name="android">
		<plugin name="cordova-plugin-battery-status" spec="^1.2.5" />
		<plugin name="cordova-plugin-camera" spec="^4.0.2" />
		<variable name="CAMERA_USAGE_DESCRIPTION" value="YOUR-PERMISSION-REQUEST" />
		<variable name="PHOTOLIBRARY_USAGE_DESCRIPTION" value="YOUR-PERMISSION-REQUEST" />
		<plugin name="cordova-plugin-battery-status" spec="^1.2.5" />
		<plugin name="cordova-plugin-media-capture" spec="^1.4.3" />
		<plugin name="cordova-plugin-device" spec="^1.1.7" />
		<plugin name="cordova-plugin-dialogs" spec="^1.3.4" />
		<plugin name="cordova-plugin-file" spec="^4.3.3" />
		<plugin name="cordova-plugin-geolocation" spec="^2.4.3" />
		<plugin name="cordova-plugin-globalization" spec="^1.0.9" />
		<plugin name="cordova-plugin-network-information" spec="^1.3.4" />
		<plugin name="cordova-plugin-vibration" spec="^2.1.6" />
		<plugin name="phonegap-plugin-push" spec="^2.1.0">
			<variable name="SENDER_ID" value="572833270659" />
		</plugin>
		<plugin name="cordova-plugin-media" spec="2.2.0" />
		<plugin name="cordova-plugin-whitelist" spec="1.2.2" />
		<plugin name="cordova-plugin-ionic-keyboard" source="npm" />
		<gap:plugin name="cordova-plugin-x-socialsharing" source="npm" />
		<engine name="android" spec="^7.1.2" />
		<plugin name="cordova-plugin-inappbrowser" spec="^1.7.2" />
		<plugin name="cordova-plugin-file-transfer" spec="1.5.1" />
		<feature name="File">
			<param name="android-package" value="org.apache.cordova.file.FileUtils" />
		</feature>
		<feature name="FileTransfer">
			<param name="android-package" value="org.apache.cordova.filetransfer.FileTransfer" />
		</feature>
		<plugin name="cordova-backgroundvideo" spec="0.0.22" />
	</platform>
	<platform name="ios">
		<plugin name="cordova-plugin-battery-status" spec="^1.2.5" />
		<plugin name="cordova-plugin-camera" spec="^2.4.1" />
		<variable name="CAMERA_USAGE_DESCRIPTION" value="YOUR-PERMISSION-REQUEST" />
		<variable name="PHOTOLIBRARY_USAGE_DESCRIPTION" value="YOUR-PERMISSION-REQUEST" />
		<edit-config target="NSCameraUsageDescription" file="*-Info.plist" mode="merge">
			<string>precisa de acesso à câmera para tirar fotos do perfil e ocorrencia</string>
		</edit-config>
		<edit-config target="NSPhotoLibraryUsageDescription" file="*-Info.plist" mode="merge">
			<string>precisa de acesso à biblioteca de fotos para tirar fotos do perfil e ocorrencia</string>
		</edit-config>
		<edit-config target="NSLocationWhenInUseUsageDescription" file="*-Info.plist" mode="merge">
			<string>precisa de acesso à localização para encontrar coisas nas proximidades</string>
		</edit-config>
		<edit-config target="NSPhotoLibraryAddUsageDescription" file="*-Info.plist" mode="merge">
			<string>precisa de acesso à biblioteca de fotos para salvar as fotos</string>
		</edit-config>    
		<plugin name="cordova-plugin-battery-status" spec="^1.2.5" />
		<plugin name="cordova-plugin-media-capture" spec="^1.4.3" />
		<plugin name="cordova-plugin-device" spec="^1.1.7" />
		<plugin name="cordova-plugin-dialogs" spec="^1.3.4" />
		<plugin name="cordova-plugin-file" spec="^4.3.3" />
		<plugin name="cordova-plugin-geolocation" spec="^2.4.3" />
		<plugin name="cordova-plugin-globalization" spec="^1.0.9" />
		<plugin name="cordova-plugin-inappbrowser" spec="^1.7.2" />
		<plugin name="cordova-plugin-network-information" spec="^1.3.4" />
		<plugin name="cordova-plugin-vibration" spec="^2.1.6" />
		<plugin name="phonegap-plugin-push" spec="^2.2.2">
			<variable name="SENDER_ID" value="572833270659" />
		</plugin>
		<plugin name="cordova-plugin-file-transfer" spec="1.5.1" />
		<plugin name="cordova-plugin-media" spec="2.2.0" />
		<plugin name="cordova-plugin-whitelist" spec="1.2.2" />
		<plugin name="cordova-plugin-ionic-keyboard" source="npm" />
		<gap:plugin name="cordova-plugin-x-socialsharing" source="npm" />
		<plugin name="cordova-plugin-save-image" spec="^0.3.0" />
	</platform>
</widget>
